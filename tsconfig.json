{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "classic",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "watch": true,
        "strictNullChecks": true,
        "noEmitOnError": false
    },
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/client",
        "client"
    ]
}